{
  "manifest_version": 3,
  "name": "BD Price Tracker",
  "version": "1.0",
  "description": "Track prices on Daraz BD locally.",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.daraz.com.bd/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.daraz.com.bd/*"],
      "js": ["content.js"]
    }
  ]
}
